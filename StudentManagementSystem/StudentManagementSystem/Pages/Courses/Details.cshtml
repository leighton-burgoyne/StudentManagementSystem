@page
@model StudentManagementSystem.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>
    @Model.Course.Name (@Model.Course.Code)
</h1>

<div>
    <h4>Course Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.CourseId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Level)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Cost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Credits)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Credits)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.GLH)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.GLH)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.ExamBoard)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.ExamBoard)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.StartDate)
        </dd>
    </dl>
    <h4>Course Notes</h4>
    <hr />
    <dl>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Notes)
        </dd>
    </dl>
    <h4>Modules</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Code
                </th>
                <th>
                    Name
                </th>
                <th>
                    GLH
                </th>
                <th>
                    Module
                </th>
                <th></th>
            </tr>
        </thead>
    </table>

    <h4>Students</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID Number
                </th>
                <th>
                    Student
                </th>
                <th>
                    Grade
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course?.CourseId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
