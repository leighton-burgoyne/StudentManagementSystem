@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}
<head>
    <!-- our project just needs Font Awesome Solid + Brands -->
    <link href="/lib/fontawesome/css/fontawesome.css" rel="stylesheet">
    <link href="/lib/fontawesome/css/brands.css" rel="stylesheet">
    <link href="/lib/fontawesome/css/solid.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
</head>

<div class="row">
    <!-- Student Count -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Students
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-primary-800">3</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa-solid fa-graduation-cap fa-2x text-primary-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Count -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                            Active Courses
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-danger-800">1</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa-solid fa-shapes fa-2x text-danger-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Intervention Count -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Interventions Count
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-warning-800">0</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa-solid fa-triangle-exclamation fa-2x text-warning-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <!-- Intervention Count -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Title
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-success-800">0</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa-solid fa-triangle-exclamation fa-2x text-success-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
