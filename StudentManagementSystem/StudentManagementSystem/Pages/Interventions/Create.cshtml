@page
@using StudentManagementSystem.Models;
@model StudentManagementSystem.Pages.Interventions.CreateModel

@{
    ViewData["Title"] = "New Intervention";
}

<h1>New Intervention</h1>

<h4>Intervention Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Intervention.Date" class="control-label"></label>
                <input asp-for="Intervention.Date" class="form-control" />
                <span asp-validation-for="Intervention.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Intervention.Category" class="control-label"></label>
                <select asp-for="Intervention.Category" class="form-control" asp-items="Html.GetEnumSelectList<Category>()"></select>
                <span asp-validation-for="Intervention.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Intervention.Description" class="control-label"></label>
                <textarea asp-for="Intervention.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Intervention.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Intervention.Student" class="control-label"></label>
                <span asp-validation-for="Intervention.Student" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
